      (cur = cur.next);;
    else if (p@ == '"') {
      (cur.next = read_string_literal p p);
      (cur = cur.next);
      (p += cur.len);;
    else if startswith p "u8\"" {
      (cur.next = read_string_literal p (p + 2));
      (cur = cur.next);
      (p += cur.len);;
