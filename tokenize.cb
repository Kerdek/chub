convert_pp_int(j@ Token) bool =
  let p = j.loc;
  let base = 10;
  if (! strncasecmp p "0x" 2ul && isxdigit cast i32 p[2]) {
    (p += 2);
    (base = 16);;
  else if (! strncasecmp p "0b" 2ul && (p[2] == '0' || p[2] == '1')) {
    (p += 2);
    (base = 2);;
