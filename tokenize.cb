canonicalize_newline(p@ char)  =
  let
    i = 0
    j = 0;
  while p[i] {
    if (p[i] == '\r' && p[i + 1] == '\n') {
      (i += 2);
      (p[(j:;(j += 1))] = cast char '\n');;
    else if (p[i] == '\r') {
      (i:;(i+=1));
      (p[(j:;(j+=1))] = cast char '\n');;
    else (p[(j:;(j+=1))] = p[(i:;(i+=1))]);;
  (p[j] = cast char '\0');;

remove_backslash_newline(p@ char)  =
  let
    i = 0
    j = 0
    n = 0;
  while p[i] {
    if (p[i] == '\\' && p[i + 1] == '\n') {
      (i += 2);
      (n:;(n+=1));;
    else if (p[i] == '\n') {
      (p[(j:;(j+=1))] = p[(i:;(i+=1))]);
      for (; n > 0; (n:;(n-=1))) (p[(j:;(j+=1))] = cast char '\n');;
    else (p[(j:;(j+=1))] = p[(i:;(i+=1))]);;
  for (; n > 0; (n:;(n-=1))) (p[(j:;(j+=1))] = cast char '\n');
  (p[j] = cast char '\0');;

