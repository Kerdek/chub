        (!!                       p[0] &&
        !!                       p[1] &&
        !!strchr "eEpP" cast int p[0] &&
        !!strchr "+-"   cast int p[1]  )? (p += 2) ;: true  :
        ( !!isalnum(p@)               ||
          (p@ == '.')                  ) ? (p += 1) ;: true  :
                                                 false );
