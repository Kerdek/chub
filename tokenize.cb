    let c = (cast i32 (p:;(p+=1))@ - '0');
    if ('0' <= p@ && p@ <= '7') {
      (c = (c << 3) + (cast i32 (p:;(p+=1))@ - '0'));
      if ('0' <= p@ && p@ <= '7') (c = (c << 3) + (cast i32 (p:;(p+=1))@ - '0'));;
    (new_pos@ = p);
