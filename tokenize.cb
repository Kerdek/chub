    else if (p@ == '\n') {
      (p:;(p+=1));
      (at_bol = true);
      (has_space = false);;
    else if isspace cast int p@ {
      (p:;(p+=1));
      (has_space = true);;
    else if (isdigit(p@) || (p@ == '.' && isdigit(p[1]))) {
      let q = (p:;(p+=1));
