  let l = false;
  let u = false;
  if (startswith p "ull") {
    (p += 3);
    (l = true);
    (u = true);;
  else if (! strncasecmp p "ul" 2ul) {
    (p += 2);
    (l = true);
    (u = true);;
  else if (startswith p "ll") {
